{% set counter = 0 %}
<div class="row">
	{% block content %}
		{% if counter == 0 %}
				<div class="col-md-6">
					{{ content }}
					<h2>Your counter: {{ counter }}</h2>
				{% set counter = 2%}
		{% elseif counter == 2 %}
				<div class="col-md-6">
					{{ content }}
					<h2>Your counter: {{ counter }}</h2>
				</div>
			{% set counter = 4 %}
		{% elseif counter == 4 %}
	</div>
	<div class="row">
				<div class="col-md-6">
					{{ content }}
					<h2>Your counter: {{ counter }}</h2>
				</div>
			{% set counter = 6 %}
		{% elseif counter == 6%}
				<div class="col-md-3">
					{{ content }}
					<h2>Your counter: {{ counter }}</h2>
				</div>
		{% else %}
			<h1>You have a problem in your counter: {{ counter }}</h1>
		{% endif %}
	{% endblock %}
</div>